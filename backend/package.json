{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "prisma migrate deploy && node dist/src/server.js",
    "start:js": "prisma migrate deploy && node server.js",
    "railway:build": "npm install && npm run build",
    "railway:start": "npm run deploy && npm start",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:js": "nodemon server.js",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "postinstall": "prisma generate",
    "deploy": "prisma migrate deploy && prisma generate",
    "seed-if-empty": "node -e \"const { PrismaClient } = require('@prisma/client'); const prisma = new PrismaClient(); prisma.menuItem.count().then(count => { if (count === 0) { console.log('Database is empty, seeding...'); require('./prisma/seed.js'); require('./prisma/seedCustomizations.js'); } else { console.log('Database already has data, skipping seed.'); } }).catch(console.error).finally(() => prisma.$disconnect());\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:auth": "jest __tests__/integration/auth.test.js",
    "test:menu": "jest __tests__/integration/menu.test.js",
    "test:orders": "jest __tests__/integration/orders.test.js",
    "test:sumup": "jest __tests__/integration/sumupEndpoints.test.js",
    "seed": "node prisma/seed.js",
    "seed:customizations": "node prisma/seedCustomizations.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^3.15.0",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.4",
    "pg": "^8.13.0",
    "prisma": "^5.21.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-validator": "^3.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.7.6",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
